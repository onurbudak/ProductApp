{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "ConnectionStrings": {
        "SqlDb": "data source=BUDAK; User Id=BUDAK\\onurb; initial catalog=ProductAppDb; TrustServerCertificate=True; Trusted_Connection=True"
    },
    "RabbitMq": {
        "host": "localhost",
        "username": "guest",
        "password": "guest",
        "productQueueName": "product_queue",
        "productQueueErrorName": "product_queue_error"
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.Elasticsearch" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
        "WriteTo": [
            {
                "Name": "Elasticsearch",
                "Args": {
                    "nodeUris": "http://localhost:9200",
                    "indexFormat": "consumer-api-logs-{0:yyyy.MM.dd}",
                    "autoRegisterTemplate": true,
                    "autoRegisterTemplateVersion": "ESv7",
                    "numberOfShards": 1,
                    "numberOfReplicas": 1
                }
            },
            {
                "Name": "Console"
            }
        ]
    },
    "AppSettings": {
        "RabbitMq": {
            "host": "localhost",
            "username": "guest",
            "password": "guest",
            "productQueueName": "product_queue",
            "productQueueErrorName": "product_queue_error"
        },
        "MassTransit": {
            "RetryCount": 3,
            "Interval": 5
        },
        "Quartz": {
            "StartTime": 180,
            "Interval": 180,
            "MaxConcurrency": 10,
            "JobName": "ProductMessageJob",
            "TriggerName": "ProductMessageTrigger"
        }
    }
}
